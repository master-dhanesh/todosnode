<%- include('./partials/header')%>


  <form action="/upload" method="POST" enctype="multipart/form-data" class="mt-5 container">
    <h3>Upload Multimedia</h3>
    <div class="mb-3">
      <label class="form-label">Username</label>
      <input name="username" type="text" class="form-control">
    </div>

    <div class="mb-3">
      <label class="form-label">Upload Avatar</label>
      <input name="avatar" type="file" class="form-control" onchange="showPreview(event)">
    </div>

    <div class="mb-3">
      <img width="200" class="preview" src="" alt="">
    </div>

    <button type="submit" class="btn btn-primary">Avatar Details</button>
  </form>

  <script>
    function showPreview(event){
    if(event.target.files.length > 0){
      var src = URL.createObjectURL(event.target.files[0]);
      var preview = document.querySelector(".preview");
      preview.src = src;
    }
  }
  </script>


  <%- include('./partials/footer')%>